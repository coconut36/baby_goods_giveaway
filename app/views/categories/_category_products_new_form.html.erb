<%= form_with(model: @product, local: true) do |f| %>

  <%= f.hidden_field :giver_id, value: current_user.id %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :age_id %>

    <%= f.collection_select :age_id, UserAge.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :category_id, value: @category.id %>

  <div class="form-group">
    <%= f.label :gender %>

    <%= f.select :gender, options_for_select(Product.genders.keys), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location %>

    <%= f.text_field :location, class: "form-control" %>
  </div>

  <%= f.submit "Create product", class: "btn btn-block btn-outline-secondary" %>
<% end %>
