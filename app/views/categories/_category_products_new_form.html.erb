<!-- Form product start -->
<%= form_with(model: @product, local: true) do |f| %>
<!-- Form product end -->

  <!-- Label and input for giver_id start -->
  <div class="form-group">
    <%= f.label :giver_id %>

    <!-- Input for giver_id start -->
    <%= f.collection_select :giver_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for giver_id end -->
  </div>
  <!-- Label and input for giver_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <%= f.label :name %>

    <!-- Input for name start -->
    <%= f.text_field :name, class: "form-control" %>
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for age_id start -->
  <div class="form-group">
    <%= f.label :age_id %>

    <!-- Input for age_id start -->
    <%= f.collection_select :age_id, UserAge.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for age_id end -->
  </div>
  <!-- Label and input for age_id end -->

  <!-- Label and input for category_id start -->
  <!-- Input for category_id start -->
  <%= f.hidden_field :category_id, value: @category.id %>
  <!-- Input for category_id end -->
  <!-- Label and input for category_id end -->

  <!-- Label and input for gender start -->
  <div class="form-group">
    <%= f.label :gender %>

    <!-- Input for gender start -->
    <%= f.select :gender, options_for_select(Product.genders.keys), {}, class: "form-control" %>
    <!-- Input for gender end -->
  </div>
  <!-- Label and input for gender end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <%= f.label :image %>

    <!-- Input for image start -->
    <%= f.file_field :image, class: "form-control" %>
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <!-- Label and input for location start -->
  <div class="form-group">
    <%= f.label :location %>

    <!-- Input for location start -->
    <%= f.text_field :location, class: "form-control" %>
    <!-- Input for location end -->
  </div>
  <!-- Label and input for location end -->

  <%= f.submit "Create product", class: "btn btn-block btn-outline-secondary" %>
<% end %>
