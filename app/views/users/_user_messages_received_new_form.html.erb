<%= form_with(model: @message, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :sender_id %>

    <%= f.text_field :sender_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :product_id %>

    <%= f.collection_select :product_id, Product.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :recipient_id, value: @user.id %>

  <%= f.submit "Create message", class: "btn btn-block btn-outline-secondary" %>
<% end %>
