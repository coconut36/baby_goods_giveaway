<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Products

    <a data-toggle="collapse" href="#user_age_products_new_form">
      Add product
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user_age.products.each do |product| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to product, product %>

        <% if current_user == product.giver %>
          <%= link_to product, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_age_products_new_form">
        <%= render partial: "user_ages/user_age_products_new_form" %>
      </div>
    </div>

  </ul>
</div>
