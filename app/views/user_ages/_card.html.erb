<div class="card mb-3">
  <h2 class="card-header h4">
    User Age #<%= user_age.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Age range</dt>
      <dd><%= user_age.age_range %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back user_age, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_user_age_url(user_age), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to user_age, method: :delete, data: { confirm: "Do you really want to delete this user_age?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(user_age.updated_at) %> ago
  </div>
</div>
