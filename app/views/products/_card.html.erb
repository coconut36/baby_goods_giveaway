<div class="card mb-3">
  <h2 class="card-header h4">
    Product #<%= product.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Giver</dt>
      <dd>
        <% if @product.giver.present? %>
          <%= link_to product.giver, product.giver %>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= product.name %></dd>

      <dt>Description</dt>
      <dd><%= product.description %></dd>

      <dt>Age</dt>
      <dd>
        <% if @product.age_group.present? %>
          <%= link_to product.age_group, product.age_group %>
        <% end %>
      </dd>

      <dt>Category</dt>
      <dd>
        <% if @product.category.present? %>
          <%= link_to product.category, product.category %>
        <% end %>
      </dd>

      <dt>Gender</dt>
      <dd><%= product.gender %></dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @product.image, class: "img-fluid" %>
      </dd>

      <dt>Location</dt>
      <dd>
        <div>
          <%= render partial: "products/one_photo_map" %>
        </div>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back product, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @product.giver %>
          <%= link_to edit_product_url(product), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @product.giver %>
          <%= link_to product, method: :delete, data: { confirm: "Do you really want to delete this product?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(product.updated_at) %> ago
  </div>
</div>
